{
  "name": "n86io/hook",
  "description": "Manage hooks and execute on right place.",
  "license": "GPL-3.0+",
  "keywords": [
    "hook"
  ],
  "authors": [
    {
      "name": "Viktor Firus",
      "email": "v@n86.io"
    }
  ],
  "require": {
    "php": ">=7.0"
  },
  "require-dev": {
    "codeclimate/php-test-reporter": "dev-master",
    "phpunit/phpunit": "^5.7"
  },
  "autoload": {
    "psr-4": {
      "N86io\\Hook\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "N86io\\Hook\\Tests\\Unit\\": "build/tests/unit"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "scripts": {
    "test": [
      "@composer install",
      "./vendor/bin/phpunit -c build/tests/unit.xml --coverage-clover build/logs/clover.xml"
    ],
    "test-report": [
      "@test",
      "./vendor/bin/test-reporter"
    ]
  }
}